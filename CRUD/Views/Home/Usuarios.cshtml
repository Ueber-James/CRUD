@model IQueryable<UsandoViews.Models.Usuario>

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Usuarios</title>
</head>

<body>
    <div class="container">
        <h1 class="text-primary">Usuarios</h1>

        <p>bem vindo</p>
        <a href="/Home/Cadastrar" class="btn btn-primary"> Novo Usuario</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Name</td>
                        <td>@u.Email</td>
                        <td>
                            <a asp-action="Cadastrar" asp-route-id="@u.Id" class="btn btn-sm btn-secondary">Alterar</a>
                            <a asp-action="Excluir" asp-route-id="@u.Id" class="btn btn-sm btn-danger">Excluir</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</body>

</html>